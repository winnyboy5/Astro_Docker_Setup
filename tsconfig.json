{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./src/global.d.ts", "./node_modules/@types"],
    "esModuleInterop": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.astro"]
}